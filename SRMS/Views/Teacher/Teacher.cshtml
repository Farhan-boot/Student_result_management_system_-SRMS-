
@{
    ViewBag.Title = "Teacher";
    Layout = "~/Views/Shared/_Layout-Teacher.cshtml";
}
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>Offered ( @Session["CountCourse"] )</h3>

                <p>All Assin Course For You !</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="@Url.Action("AssinCourse", "Teacher")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>10 Marks<sup style="font-size: 20px"></sup></h3>
                <p>Attendance</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("Atten","Attendance")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>15 Marks</h3>

                <p>Class-Test & Presentation</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="@Url.Action("ClassTest","ClassTestPresentation")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h3>75 Marks</h3>

                <p>Mid & Final Marks</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="@Url.Action("MidAndFinalMark", "Teacher")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

    
    <!-- ./col -->
</div>


<!--start mark process-->
<div class="row">


    <div class="col-md-12">
        <!-- Custom Tabs -->
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_2" data-toggle="tab" aria-expanded="true">25 Marks Process Settings</a></li>
                <li class=""><a href="#tab_1" data-toggle="tab" aria-expanded="false">Mid-Term Marks Process Settings</a></li>

                <li class=""><a href="#tab_3" data-toggle="tab" aria-expanded="false">Final-Term Marks Process Settings</a></li>

                <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="tab_1">

                @{ Html.RenderAction("MidTermMarkProcess", "MarkProcess");}
                  
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane active" id="tab_2">
                    @{ Html.RenderAction("MidMarkProcess", "MarkProcess");}
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="tab_3">
                    Final-Term Marks Process

                    @{ Html.RenderAction("FinalMarkProcess", "MarkProcess");}
                </div>
                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
        </div>
        <!-- nav-tabs-custom -->
    </div>




</div>






