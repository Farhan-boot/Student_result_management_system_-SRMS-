@model IEnumerable<SRMS.Data.Student>

@{
    ViewBag.Title = "Active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Active</h2>

<p>
    @Html.ActionLink("Download Exal File", "Exal")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roll)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Batch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dept)
        </th>
 
    </tr>

@foreach (var item in Model) {
    <tr class="btn-github" style="font-size:16px">
        <td>
            @*@Html.DisplayFor(modelItem => item.Picture)*@  
            <img class="img-thumbnail" src="@Url.Content(item.Picture)" style="height: 80px;width: 80px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roll)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Batch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semester)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dept)
        </td>
        
        

        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.ID},new {@class= "btn btn-info" })
            @Html.ActionLink("Details", "Details", new {id = item.ID}, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
