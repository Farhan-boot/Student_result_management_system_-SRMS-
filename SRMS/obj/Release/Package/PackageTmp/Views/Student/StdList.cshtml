@model IEnumerable<SRMS.Data.Student>

@{
    ViewBag.Title = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Student List</h2>


<div id="idload" class="classload">
    <div style="width:100%;padding-bottom:40px">
        @using (Html.BeginForm("StdList", "Student", FormMethod.Get))
{
            <input type="submit" value="Search" class="btn btn-success" style="float:right" />
            <input type="text" placeholder="Search By Roll / AC" name="SearchByAcRoll" class="" style="width:150px;float:right;padding-top:9px">
}
    </div>
    <div style="clear:both"></div>

    <p>
        @Html.ActionLink("Create New Student", "AddStd", "Student",new {@class= "btn btn-block btn-info btn-flat" })
    </p>
    <table class="table" id="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roll)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr class="btn-github" style="font-size:16px">
                <td>
                    <img src="@Url.Content(@item.Picture)" class="img-thumbnail" alt="Alternate Text" style="height:60px;width:60px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roll)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Batch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dept)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>


                <td>

                  
                    @Html.ActionLink("Edit", "Edit", new {id=item.ID},new {@class= "btn btn-info" })
                    @Html.ActionLink("Details", "Details", new { id=item.ID }, new { @class = "btn btn-info" })
                   @*@Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "btn btn-info" })*@
                    <a class="btn btn-info" onclick="Delete('@Url.Action("Delete", "Student",new {item.ID})')">Delete</a>
                </td>
            </tr>
}

    </table>
</div>