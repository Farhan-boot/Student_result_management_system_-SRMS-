@model IEnumerable<SRMS.Data.Staff_Teacher>

@{
    ViewBag.Title = "StaffList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>StaffList</h2>

<div style="width:100%;padding-bottom:40px">
    @using (Html.BeginForm("StaffList", "Staff", FormMethod.Get))
        {
            <input type="submit" name="Button"  class="btn btn-success" value="Search" style="float: right" />
            <input type="text" name="searchByNameMobile" style="width:150px;float:right;padding-top:9px" placeholder="Search By Name / Mobile">
        }
</div>

<p>
    @Html.ActionLink("Create New Staff", "AddStaff","Staff", new { @class = "btn btn-block btn-info btn-flat" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Degicnetion)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PermanentAddress)
        </th>
       
       
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="btn-github" style="font-size:16px">
        <td>
            @*@Html.DisplayFor(modelItem => item.ImagePath)*@
            <img src="@Url.Content(item.ImagePath)" alt="Alternate Text" style="height:50px;width:50px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Degicnetion)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
      
      
        <td>
            @Html.DisplayFor(modelItem => item.PermanentAddress)
        </td>
      
        
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "AddStaff", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
